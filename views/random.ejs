<section class="pt-5 pb-5">
  <div class="container">
    <div class="row w-100">
        <div class="col-lg-12 col-md-12 col-12">
            <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
            <p class="mb-5 text-center">
            <table id="shoppingCart" class="table table-condensed table-responsive">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                  <% for (const item of cart) { %>
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-md-3 text-left">
                                  <svg class="bd-placeholder-img rounded-circle" width="160" height="160" margin-bottom="2em" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 160x160" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777"/><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text><image href= <%= item.img%>/></svg>
                                </div>
                                <div class="col-md-9 text-left mt-sm-2">
                                    <h4><%= item.menu_name %></h4>
                                    <p class="font-weight-light"><%= item.type%></p>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">$<%= item.price * item.quantity %>.00</td>
                        <td data-th="Quantity">
                            <input type="number" class="form-control form-control-lg text-center" value="<%= item.quantity %>">
                        </td>
                        <td class="actions" data-th="">
                            <div class="text-right">
                                <button class="btn btn-white border-secondary bg-white btn-md mb-2">

                                </button>
                                <button class="btn btn-white border-secondary bg-white btn-md mb-2">

                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="float-right text-right">
                <h4>Your Total</h4>
                <h1>$<%= totPrice %>.00</h1>
            </div>
        </div>
    </div>
    <div class="row mt-4 d-flex align-items-center">
      <div id="order">
        <form action="/api/confirm-order" method="get">
          <input type="submit" value="Order Now">
        </form>
        <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
            <a href="/"> Back to Menu</a>
        </div>
      </div>

    </div>
  </div>
</section>
